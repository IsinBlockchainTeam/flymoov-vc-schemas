{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/IsinBlockchainTeam/flymoov-vc-schemas/main/ticket/jsonld.json-ld",
      "jsonSchema": "https://raw.githubusercontent.com/IsinBlockchainTeam/flymoov-vc-schemas/main/ticket/jsonschema.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": [
        "string",
        "array",
        "object"
      ]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": [
        "string",
        "array"
      ],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": [
        "string",
        "object"
      ],
      "format": "uri",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "subjectPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "id",
        "departureLocation",
        "arrivalLocation",
        "departureDate",
        "arrivalDate",
        "flightNumber",
        "airline",
        "seat",
        "NFTId",
        "NFTContractAddress"
      ],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "departureLocation": {
          "type": "string"
        },
        "arrivalLocation": {
          "type": "string"
        },
        "departureDate": {
          "type": "integer"
        },
        "arrivalDate": {
          "type": "integer"
        },
        "flightNumber": {
          "type": "string"
        },
        "airline": {
          "type": "string"
        },
        "seat": {
          "type": "string"
        },
        "NFTId": {
          "type": "integer"
        },
        "NFTContractAddress": {
          "type": "string"
        }
      }
    }
  }
}